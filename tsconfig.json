{
  "compilerOptions": {
    "alwaysStrict": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2020",
    "newLine": "LF",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true
  },
  "exclude": [
    "node_modules"
  ]
}